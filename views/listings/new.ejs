<% layout("/layouts/boilerplate") -%>
<div class="row">
  <div class="col-8 offset-2  mt-3 " >
  <h3>Create a New Listing</h3>
  <form method="POST" action="/listings" novalidate class="needs-validation">
    <div class="mb-3">
      <lable for="title" class="form-label"> Enter Title </lable>
      <input 
        name="listing[title]"
        placeholder="Add an Catchy Title"
        type="text" 
        class="form-control" 
        required
        /> 
    </div>

    <div class="mb-3">
      <lable for="description" class="form-label"> Description </lable>
      <textarea 
        name="listing[description]"
        class="form-control" required ></textarea>
    </div>

    <div class="mb-3" >
      <lable for="image" class="form-label"> Image Link </lable>
      <input 
    name="listing[image]" 
    placeholder="enter image URL/Link" 
    type="text" 
    class="form-control"/>
    </div>
 <div class="row">
  <div class="mb-4 col-md-4 ">
    <lable for="price" class="form-label"> Price</lable>
    <input 
    name="listing[price]" 
    placeholder="1200" 
    type="number"
    class="form-control"
    required
    />

  </div>
    
  <div class="mb-3 col-md-8 " >
    <lable for="country" class="form-label"> Country</lable>

    <input 
    name="listing[country]" 
    placeholder="INDIA" 
    type="text"
    class="form-control"/>
  </div>
</div>
  <div class="mb-3" > 
    <lable for="location" class="form-label"> Location</lable>
    <input 
    name="listing[location]" 
    placeholder="Airoli, Maharashtra " 
    type="text"
    class="form-control" 
    required
    />
  </div>
    <button class="btn btn-dark add-btn mt-3 "  >Add</button> 

  </form>
</div>
</div>  